<h1>Projects</h1>

<% @projects.each do |project| %>
  <article>
    <header>
      <h2><%= project.name %></h2>
    </header>

    <p><%= project.description %></p>

    <table>
      <tr>
        <th>Pledging End Date:</th>
        <td><%= project.pledging_ends_on %></td>
      </tr>
      <tr>
        <th>Website:</th>
        <td><%= project.website %></td>
      </tr>
      <tr>
        <th>Target Pledge Amount:</th>
        <td><%= number_to_currency(project.target_pledge_amount) %></td>
      </tr>
    </table>
  </article>
<% end %>